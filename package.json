{
  "name": "as_sums_api",
  "version": "1.0.0",
  "description": "This project consists of building a school user management system where users can register, log in and access protected resources. The system has registration, authentication, authorization, password security, automated testing, integration and continuous deployment functionalities.",
  "main": "app.js",
  "type": "module",
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.js$",
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-syntax-import-attributes"
    ]
  },
  "scripts": {
    "start": "node --watch --no-warnings server.js",
    "test": "jest"
  },
  "keywords": [
    "school",
    "system",
    "users",
    "management",
    "api",
    "node",
    "express"
  ],
  "author": "Alex Santos",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "sequelize": "^6.37.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/plugin-syntax-import-attributes": "^7.24.1",
    "@babel/preset-env": "^7.24.3",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  }
}
